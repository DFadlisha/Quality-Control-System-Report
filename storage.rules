rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // ============================================
    // HELPER FUNCTIONS
    // ============================================
    
    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Check if user is an admin
    function isAdmin() {
      return isAuthenticated() && 
             request.auth.token.get('admin', false) == true;
    }
    
    // Validate file size (max 10MB)
    function isValidFileSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }
    
    // Validate image file type
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    // Validate PDF file type
    function isPDF() {
      return request.resource.contentType == 'application/pdf';
    }
    
    // ============================================
    // STORAGE RULES
    // ============================================
    
    // Rejected parts images (uploaded during quality inspection)
    match /rejected_parts/{imageId} {
      // Anyone authenticated can read images
      allow read: if isAuthenticated();
      
      // Anyone authenticated can upload images (with validation)
      allow create: if isAuthenticated() && 
                       isImage() && 
                       isValidFileSize();
      
      // Only admins can delete images
      allow delete: if isAdmin();
      
      // No updates allowed (delete and recreate instead)
      allow update: if false;
    }
    
    // PDF reports (generated after submission)
    match /reports/{reportId} {
      // Anyone authenticated can read PDFs
      allow read: if isAuthenticated();
      
      // Anyone authenticated can upload PDFs (with validation)
      allow create: if isAuthenticated() && 
                       isPDF() && 
                       isValidFileSize();
      
      // Allow updates to PDFs (for metadata updates)
      allow update: if isAuthenticated() && 
                       isPDF() && 
                       isValidFileSize();
      
      // Only admins can delete PDFs
      allow delete: if isAdmin();
    }
    
    // Deny all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
