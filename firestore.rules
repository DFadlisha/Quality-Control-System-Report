rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // HELPER FUNCTIONS
    // ============================================
    
    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Check if user is an admin (you can customize this logic)
    // Option 1: Check custom claims (recommended)
    // function isAdmin() {
    //   return isAuthenticated() && 
    //          request.auth.token.get('admin', false) == true;
    // }
    
    // Option 2: Check against a specific email list (simpler, less secure)
    // Using email whitelist for admin access
    function isAdmin() {
      return isAuthenticated() && 
             request.auth.token.email in [
               'khaled.nessolutionetwork@gmail.com',
               'fadhlishadhaniyah@gmail.com'
             ];
    }
    
    // Validate sorting log data structure
    function isValidSortingLog() {
      let data = request.resource.data;
      return data.keys().hasAll([
        'part_no', 'part_name', 'quantity_sorted', 'quantity_ng',
        'supplier', 'factory_location', 'operators', 'ng_details',
        'remarks', 'timestamp'
      ]) &&
      data.part_no is string && data.part_no.size() > 0 &&
      data.part_name is string && data.part_name.size() > 0 &&
      data.quantity_sorted is int && data.quantity_sorted >= 0 &&
      data.quantity_ng is int && data.quantity_ng >= 0 &&
      data.supplier is string &&
      data.factory_location is string &&
      data.operators is list &&
      data.ng_details is list &&
      data.remarks is string &&
      data.timestamp is timestamp;
    }
    
    // ============================================
    // COLLECTION RULES
    // ============================================
    
    // Sorting Logs Collection
    match /sorting_logs/{logId} {
      // Anyone authenticated can read sorting logs
      allow read: if isAuthenticated();
      
      // Anyone authenticated can create new logs (with validation)
      allow create: if isAuthenticated() && isValidSortingLog();
      
      // Only admins can update existing logs
      allow update: if isAdmin() && isValidSortingLog();
      
      // Only admins can delete logs
      allow delete: if isAdmin();
    }
    
    // Parts Master Collection (reference data)
    match /parts_master/{partId} {
      // Anyone authenticated can read parts data
      allow read: if isAuthenticated();
      
      // Only admins can create/update/delete parts
      allow create, update, delete: if isAdmin();
    }
    
    // Users Collection (if you add user profiles later)
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isAuthenticated() && request.auth.uid == userId;
      
      // Users can update their own profile
      allow update: if isAuthenticated() && request.auth.uid == userId;
      
      // Only admins can create/delete user profiles
      allow create, delete: if isAdmin();
    }
    
    // Attendance/Clock-in Collection (if you add this later)
    match /attendance/{attendanceId} {
      // Users can read all attendance records
      allow read: if isAuthenticated();
      
      // Users can create their own attendance records
      allow create: if isAuthenticated();
      
      // Only admins can update/delete attendance records
      allow update, delete: if isAdmin();
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
